    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "MFP Debugger",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:9080/mfp/api/adapters/employeeAdapter/updateEmployees",
            "webRoot": "${workspaceRoot}"
        }
    ]
}